.App
  width 100%
  height 100%
  text-align center
  .Alert
    position fixed
    z-index 9999
    background-color rgba(0,0,0,.1)
    font-size 0
    width 100%
    height 100%
    .content
      position absolute
      left 14%
      top 35%
      border-radius .16rem
      background-color #FFF
      text-align center
      width 72%
      h3
        padding .4rem
        color #030303
        font-size .48rem
      section
        margin-bottom .4rem
        padding 0 .4rem
        color #030303
        font-size .427rem
      .btn
        display flex
        border-top 1px solid rgba(0,0,0,.1)
        p
          padding .25rem 0
          flex 1
          color #0076FF
          font-size .4rem
          cursor pointer
          &.cancel
            border-right 1px solid rgba(0,0,0,.1)

.App-logo {
  animation: App-logo-spin infinite 20s linear;
  height: 80px;
}

.App-header {
  background-color: #222;
  height: 150px;
  padding: 20px;
  color: white;
}

.App-title {
  font-size: 1.5em;
}

.App-intro {
  font-size: large;
}

@keyframes App-logo-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}